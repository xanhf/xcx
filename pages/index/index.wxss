/**index.wxss**/

.container {
  width: 100%;
  min-height: 100%;
   background-color:#F8F8F9;
   overflow-x: hidden;
  
} 
.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
   background-color:#EA4A5E;
}
.swiper_container{
 width: 100%;
position: relative;
 height: auto; 
}
.swiper_container .swiper{
  max-width: 100%;
}
.swiper_container .slide-image{
  display: block;
  width: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-bottom: 40rpx
}
.notice{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  height: 90rpx;
  line-height: 90rpx;
  width: 750rpx;
  padding-top: 10rpx;
  background-color: #fff;
}
.notice_swiper{
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 635rpx;
    background-color: #fff;
}
.notice_iteml {
  padding-left: 25rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  font-size: 26rpx;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #999;
}
.notice_itemr {
  padding-left: 10rpx;
  font-size: 26rpx;
  overflow: hidden;
  color: #e64340;
  width: 635rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.scroll_view_item{
  width: 230rpx;
 height: 245rpx;
 margin-right: 24rpx;
 display: inline-block;
 background-color: cornsilk;
}
.scroll_view_x{
  padding-left: 24rpx;
  padding-right: 24rpx;
  margin-top: 20rpx;
  width: 100%;
  height: 245rpx;
  white-space: nowrap;
 display: flex;
 align-content: center;
  text-align: center;
  line-height: 245rpx
}
::-webkit-scrollbar{
  height: 0;
  width: 0;
  color: transparent
}

.scroll-view_H{
  position: relative;
  width: 100%;
 white-space: nowrap;
}
.scroll-view-item_H{
  background-color: cornsilk;
  width: 120px;
  height: 150px;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  display: inline-block;
  
}
.scroll-view-item_H .item_img{
  width: 100%;
  height: 150px;
    border-radius: 5%;
}
.item_title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
  margin-top: 20rpx;
  text-align: left;
  padding-left: 24rpx;
  margin-bottom: 20rpx
  
}